<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab6.AddPage">
    <ContentPage.Content>
        <StackLayout>
            

            <Label Text="Title:" />
            <Entry x:Name="TitleEntry" />

            <Label Text="Autor:" />
            <Entry x:Name="AutorEntry" />
            
            <Label Text="Year:" />
            <Entry x:Name="YearEntry" />

            <Label Text="Page:" />
            <Entry x:Name="PageEntry" />

            <Button Text="Save" Clicked="SaveBook_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>