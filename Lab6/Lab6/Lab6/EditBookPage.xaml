<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab6.EditBookPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edit Book" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="10,10,0,0" />
            <Entry x:Name="TitleEntry" Placeholder="Title" Margin="10,10,10,0" />
            <Entry x:Name="AutorEntry" Placeholder="Author" Margin="10,10,10,0" />
            <Entry x:Name="YearEntry" Placeholder="Year" Margin="10,10,10,0" />
            <Entry x:Name="PageEntry" Placeholder="Pages" Margin="10,10,10,0" />
            <Button Text="Save" Clicked="Save_Clicked" Margin="10,20,10,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>